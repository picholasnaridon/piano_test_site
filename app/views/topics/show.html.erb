<h1><%= @topic.name %> Articles</h1>
<div class="row">
  <div class="card-deck">
    <% @articles.each do |article| %>
      <%= link_to topic_article_path(@topic, article) do %>
        <div class="card" style="width: 20rem;">
          <img class="card-img-top" src="<%= article.thumbnail %>" height="90" alt="<%= article.title %>">
          <div class="card-block">
            <h4 class="card-title"><%= article.title %></h4>
            <p class="card-text">By <%= article.author %></p>
          </div>
          <div class="card-footer">
            <small class="text-muted"><%= article.created_at %></small>
          </div>
        </div>
      
      <% end %>
    <% end %>
  </div>
</div>

<%= link_to "Back to Topics", topics_path, class: "btn btn-primary" %>
<%= link_to "New #{@topic.name} Article", new_topic_article_path(@topic, @article), class: "btn btn-success" %>
